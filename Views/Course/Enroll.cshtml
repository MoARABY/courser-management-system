@using FinalProject.Models;
@using FinalProject.EntityF;
@using System.Security.Claims;

@model List<CourseDetailsModule>

<div style="display:flex; align-items:center; justify-content:space-between;">
    <h1 class="text-primary">StdCourses</h1>
</div>
<br />
<table class="table table-dark table-striped-columns">
    <thead>
        <tr>
            <th class="text-light">Name</th>
            <th class="text-light">Description</th>
            <th class="text-light">StartDate</th>
            <th class="text-light">EndDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Course_Name</td>
                <td>@item.Description</td>
                @* <td>@item.Duration</td>*@
                @*  <td>@item.Capacity</td>*@
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>
                    <form method="post" asp-action="Enroll" asp-route-id="@item.Course_Id">
                        <button type="submit" class="btn btn-light">Enroll</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-light m-4" asp-action="Index">Back</a>
</div>