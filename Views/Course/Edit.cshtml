@using FinalProject.EntityF;
@model Course

<h1 class="text-primary">Edit</h1>


<form asp-action="Edit">

    <input type="hidden" asp-for="Ins_ID" />
    <input type="hidden" asp-for="Course_Id" />

    <div class="form-group">
        <label asp-for="Course_Name" class="control-lable text-light"></label>
        <input asp-for="Course_Name" class="form-control" />
        <span asp-validation-for="Course_Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description" class="control-lable text-light"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Duration" class="control-lable text-light"></label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Capacity" class="control-lable text-light"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="StartDate" class="control-lable text-light"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EndDate" class="control-lable text-light"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <br />
    <div style="display:flex; align-items:center;">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-light m-4" asp-action="Index">Back</a>
    </div>
</form>
